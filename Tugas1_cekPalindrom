fun main(args: Array<String>) {
	
    println("Masukkan Kata : \n")
    
    var input:String = readLine()!!
    
    
    var j:Int = input.length - 1
    
    for(item in input.indices)
    {
        
        if(input[item].equals(input[j],true) != true)
        {

            println(" Kata [$input] Bukan Palindrom !")
            break
        }
        else if(item >= j)
        {
            
            println("Kata [$input] Adalah Palindrom !")
            break
        }
        else
        {
            
            --j
        }
        
    }


}
